<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_connect"
        android:id="@+id/btConnect"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_map"
        android:id="@+id/btMap"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btConnect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_metrics"
        android:id="@+id/btRideData"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btMap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStatus"
        android:text="Please Connect To Bike..."
        android:layout_below="@+id/btRideData"
        android:layout_centerInParent="true"/>
</RelativeLayout>


